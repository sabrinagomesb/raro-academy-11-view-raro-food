<% content_for :title do %>
  <span>
    Order
  </span>
<% end %>

<% content_for :new_button do %>
  <%= link_to "New order", new_order_path, class: btn_primary %>
<% end %>

<div class="m-auto flex flex-col justify-between items-center bg-white shadow-lg rounded-lg overflow-hidden max-w-full p-6">

  <%= render @order %>

  <div class="flex justify-evenly gap-4 mt-4">
    <%= link_to "Edit", edit_order_path(@order), class: btn_primary %>
    <%= button_to "Delete", @order, method: :delete, class: btn_danger, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure you want delete this order?" } %>
  </div>
  <%= link_to "Back to orders", orders_path, class: btn_simple %>
</div>
