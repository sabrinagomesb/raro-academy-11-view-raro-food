<div id="<%= dom_id customer %>">
  <div class="my-4">
    <h2 class="text-lg font-semibold text-gray-800 uppercase"><%= customer.user.name %></h2>
  </div>
</div>

<table class="w-full whitespace-no-wrap">
  <thead>
    <tr class="w-full text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b bg-gray-100">
      <th class="p-4 divide-x">Name</th>
      <th class="p-4 divide-x">Email</th>
      <th class="p-4 divide-x">CPF</th>
      <th class="p-4 divide-x">Birthday</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y">
    <tr class="text-gray-700">
      <td class="px-8 py-3"><%= customer.user.name %></td>
      <td class="px-8 py-3"><%= customer.user.email %></td>
      <td class="px-8 py-3"><%= customer.user.cpf %></td>
      <td class="px-8 py-3"><%= customer.birthday %></td>
    </tr>
  </tbody>
</table>
