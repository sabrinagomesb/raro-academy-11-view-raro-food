<div class="m-auto flex flex-col justify-between items-center bg-white shadow-lg rounded-lg overflow-hidden max-w-2xl p-4 mt-4">
  <%= form_with(model: category) do |form| %>

    <%# name %>
    <div class="sm:col-span-3">
      <%= form.label :name, class: input_label  %>
      <div class="mt-2">
        <%= form.text_field :name, class: input_text, placeholder: "Type the new category name" %>
      </div>
    </div>

    <% if category.errors.any? %>
      <div class="text-red-700 text-xs w-48 pt-4">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul class="pt-2">
          <% category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="mt-6 flex items-center justify-center gap-x-6">
      <%= link_to "Cancel", categories_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
      <%= form.submit 'Save', class: btn_primary %>
    </div>
  <% end %>
</div>
